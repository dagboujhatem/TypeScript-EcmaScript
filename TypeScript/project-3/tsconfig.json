{
    "compilerOptions": {
        "strict": true,
        "target": "ES2021",
        "outDir": "dist",
        "rootDir": "src",
        "experimentalDecorators": true
    },
    "files": [
        "src/main.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "baseUrl": ".",
    "paths": {
        "@services/*": [
            "src/services/*"
        ],
        "@angular/core": [
            "src/decorators/core.module"
        ]
    }
}